{
  "name": "gimpact",
  "version": "0.1.7",
  "description": "Visualize Git contribution impact by developer",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/kotaitos/gimpact.git"
  },
  "bin": {
    "gimpact": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "start": "node dist/index.js",
    "lint": "biome lint ./src",
    "format": "biome format --write ./src",
    "check": "biome check --write ./src",
    "type-check": "tsc --noEmit",
    "preflight": "bun run check && bun run type-check && bun test && bun run build"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/bun": "latest",
    "@types/node": "^25.0.3",
    "tsup": "^8.5.1"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@clack/prompts": "^0.11.0",
    "chalk": "^5.6.2",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.2",
    "simple-git": "^3.30.0"
  }
}
